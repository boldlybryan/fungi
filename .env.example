# Database
# Get this from Neon.tech console (your main/production database)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# NextAuth
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# Email (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# GitHub
# Create Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo (full control)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxx
GITHUB_OWNER=your-github-username
GITHUB_REPO=fungi

# Neon Database Branching
# Get from: https://console.neon.tech/app/projects
# API key from: https://console.neon.tech/app/settings/api-keys
NEON_API_KEY=xxxxxxxxxxxxx
NEON_PROJECT_ID=xxxxxxxxxxxxx
NEON_PARENT_BRANCH_ID=br_xxxxxxxxxxxxx

# Vercel
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=xxxxxxxxxxxxx
VERCEL_PROJECT_ID=prj_xxxxxxxxxxxxx
VERCEL_TEAM_ID=team_xxxxxxxxxxxxx

# v0 Platform API
# Get from: https://v0.dev/settings (when available)
V0_API_KEY=v0_xxxxxxxxxxxxx
